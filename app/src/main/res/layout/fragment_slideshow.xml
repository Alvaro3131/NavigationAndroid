<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="12dp"
        android:layout_marginTop="16dp"
        android:text="Calculadora Basica"
        android:textColor="#221F1F"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etProceso"
        android:layout_width="378dp"
        android:layout_height="110dp"
        android:layout_below="@+id/tvTitulo"
        android:layout_marginTop="100dp"
        android:cursorVisible="true"
        android:ellipsize="end"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="right"
        android:singleLine="true"
        android:textColor="#101010"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSiete"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@+id/etProceso"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="7"
        android:textSize="28dp"
        app:layout_constraintEnd_toStartOf="@+id/btnOcho"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etProceso" />

    <Button
        android:id="@+id/btnOcho"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@+id/etProceso"
        android:layout_marginEnd="28dp"
        android:layout_toEndOf="@+id/btnSiete"
        android:layout_toRightOf="@+id/btnSiete"
        android:text="8"
        android:textSize="28dp"
        app:layout_constraintEnd_toStartOf="@+id/btnNueve"
        app:layout_constraintTop_toBottomOf="@+id/etProceso" />

    <Button
        android:id="@+id/btnNueve"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@+id/etProceso"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@+id/btnOcho"
        android:layout_toRightOf="@+id/btnOcho"
        android:text="9"
        android:textSize="28dp"
        app:layout_constraintEnd_toStartOf="@+id/btnDiv"
        app:layout_constraintTop_toBottomOf="@+id/etProceso" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@+id/etProceso"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/btnNueve"
        android:layout_toRightOf="@+id/btnNueve"
        android:text="/"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etProceso" />

    <Button
        android:id="@+id/btnCuatro"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@+id/btnSiete"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="4"
        android:textSize="28dp"
        app:layout_constraintEnd_toStartOf="@+id/btnCinco"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSiete" />

    <Button
        android:id="@+id/btnCinco"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@+id/btnOcho"
        android:layout_marginEnd="28dp"
        android:layout_toEndOf="@+id/btnCuatro"
        android:layout_toRightOf="@+id/btnCuatro"
        android:text="5"
        android:textSize="28dp"
        app:layout_constraintEnd_toStartOf="@+id/btnSeis"
        app:layout_constraintTop_toBottomOf="@+id/btnOcho" />

    <Button
        android:id="@+id/btnSeis"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@+id/btnNueve"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@+id/btnCinco"
        android:layout_toRightOf="@+id/btnCinco"
        android:text="6"
        android:textSize="28dp"
        app:layout_constraintEnd_toStartOf="@+id/btnSuma"
        app:layout_constraintTop_toBottomOf="@+id/btnNueve" />

    <Button
        android:id="@+id/btnMulti"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@+id/btnDiv"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/btnSeis"
        android:layout_toRightOf="@+id/btnSeis"
        android:text="x"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnResta" />

    <Button
        android:id="@+id/btnUno"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@+id/btnCuatro"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="1"
        android:textSize="28dp"
        app:layout_constraintEnd_toStartOf="@+id/btnDos"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCuatro" />

    <Button
        android:id="@+id/btnDos"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@+id/btnCinco"
        android:layout_marginEnd="28dp"
        android:layout_toEndOf="@+id/btnUno"
        android:layout_toRightOf="@+id/btnUno"
        android:text="2"
        android:textSize="28dp"
        app:layout_constraintEnd_toStartOf="@+id/btnTres"
        app:layout_constraintTop_toBottomOf="@+id/btnCinco" />

    <Button
        android:id="@+id/btnTres"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@+id/btnSeis"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@+id/btnDos"
        android:layout_toRightOf="@+id/btnDos"
        android:text="3"
        android:textSize="28dp"
        app:layout_constraintEnd_toStartOf="@+id/btnResta"
        app:layout_constraintTop_toBottomOf="@+id/btnSeis" />

    <Button
        android:id="@+id/btnResta"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@+id/btnMulti"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/btnTres"
        android:layout_toRightOf="@+id/btnTres"
        android:text="-"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSuma" />

    <Button
        android:id="@+id/btnPunto"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@+id/btnUno"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="4dp"
        android:text="."
        android:textSize="28dp"
        app:layout_constraintEnd_toStartOf="@+id/btnCero"
        app:layout_constraintHorizontal_bias="0.426"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnUno" />

    <Button
        android:id="@+id/btnCero"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@+id/btnDos"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="28dp"
        android:layout_toEndOf="@+id/btnPunto"
        android:layout_toRightOf="@+id/btnPunto"
        android:text="0"
        android:textSize="28dp"
        app:layout_constraintEnd_toStartOf="@+id/btnIgual"
        app:layout_constraintTop_toBottomOf="@+id/btnDos" />

    <Button
        android:id="@+id/btnIgual"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@+id/btnTres"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:layout_toEndOf="@+id/btnCero"
        android:layout_toRightOf="@+id/btnCero"
        android:text="="
        android:textSize="28dp"
        app:layout_constraintEnd_toStartOf="@+id/btnMulti"
        app:layout_constraintTop_toBottomOf="@+id/btnTres" />

    <Button
        android:id="@+id/btnSuma"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:layout_below="@+id/btnResta"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/btnIgual"
        android:layout_toRightOf="@+id/btnIgual"
        android:text="+"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDiv" />

    <Button
        android:id="@+id/btnLimpiar"
        android:layout_width="358dp"
        android:layout_height="76dp"
        android:layout_below="@+id/btnPunto"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:text="Limpiar"
        android:textSize="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCero" />


</androidx.constraintlayout.widget.ConstraintLayout>